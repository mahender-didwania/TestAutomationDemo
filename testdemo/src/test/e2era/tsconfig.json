{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "alwaysStrict": false,
    "resolveJsonModule": true,
    //    "module": "nodenext",
    "module": "commonjs",
    //    "module": "node16",
    "target": "esnext",
    //    "target": "es2020",
    //    "target": "es2017",
    //    "moduleResolution": "node16",
    "lib": [
      "esnext",
      "DOM"
    ],
    //    "lib": ["es2017", "DOM"],
    "strictBindCallApply": true,
    "removeComments": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "baseUrl": "./types",
    "rootDirs": [
      "./base/support/step_definitions",
      "./base/support"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "build"
  },
  "include": [
    "./base/support/step_definitions/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}